@model ice.Models.tbl_user
@using ice.Models

@{
    ViewBag.Title = "Register";
}

<h2>Sign Up user Account</h2>

@using (Html.BeginForm("Register", "RegisterUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
